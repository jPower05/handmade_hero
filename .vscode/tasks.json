{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build game",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "env": {
                    "PKG_CONFIG_PATH": "/usr/local/lib/pkgconfig",
                    "LD_LIBRARY_PATH": "/usr/local/lib"
                }
            }
        }
    ]
}
